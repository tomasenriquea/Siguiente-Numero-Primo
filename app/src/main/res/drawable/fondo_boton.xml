<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="false">
        <shape>
            <solid android:color="@color/colorPrimaryDark"/>
            <stroke android:width="5dp" android:color="#ff00ff"
                android:dashWidth="20dp" android:dashGap="20dp"/>
        </shape>
    </item>
</selector>

<!--
 1) Con la etiqueta 'stroke' se da al boton borde de lineas de color similar a la letra

-->